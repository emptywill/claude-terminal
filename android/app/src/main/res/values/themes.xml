<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ClaudeTerminal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryVariant">@color/accent_secondary</item>
        <item name="colorOnPrimary">@color/bg_main</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/bg_main</item>
        <item name="android:windowBackground">@color/bg_main</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/bg_main</item>
        <item name="android:navigationBarColor">@color/bg_main</item>

        <!-- Fullscreen -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
