<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0a0f"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claude Terminal"
        android:textColor="#ff9100"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your server address"
        android:textColor="#a1a1aa"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/serverUrlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://192.168.0.61:3555"
        android:textColor="#e4e4e7"
        android:textColorHint="#71717a"
        android:background="#1a1a24"
        android:padding="16dp"
        android:textSize="16sp"
        android:inputType="textUri"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnPresetHomelab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Homelab (192.168.0.61:3555)"
        android:textColor="#0a0a0f"
        android:background="#ff9100"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnPresetLocalhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Localhost"
        android:textColor="#e4e4e7"
        android:background="#2a2a3a"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Connect"
        android:textColor="#0a0a0f"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="#ff9100" />

</LinearLayout>
